@model IEnumerable<Appxery.Models.AppX>

<h3>AppX Listing</h3>

<table class="table">
    <tr>
        <th>Name
        </th>
        <th>Version
        </th>
        <th>Architecture
        </th>
        <th>Publisher
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @item.Version.ToString()
            </td>
            <td>
                @item.ProcessorArchitecture.ToString()
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PublisherDisplayName)
            </td>
            <td class="text-right">
                <a href="@Url.Action("details", new { controller = "appx", id = item.AppxId })" class="btn btn-small btn-default"><i class="icon-th-list"></i> Details</a>
                <a href="@Url.Action("download", new { controller = "appx", id = item.AppxId })" class="btn btn-small btn-default"><i class="icon-download-alt"></i> Download</a>
            </td>
        </tr>
    }

</table>
